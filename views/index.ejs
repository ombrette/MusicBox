<% include partials/header %>
   <h1>Welcome to Social Music</h1>
   <div class="row">
	   <div class="col-md-6 col-sm-6 col-xs-6">
	   		<h2>Top 5</h2>
	   		<table>
			    <tr>
			        <th>Title</th>
			        <th>Album</th>
			        <th>Artist</th>
			        <th>Year</th>
			        <th>BPM</th>
			    </tr>
			    <% top.forEach(function(song) {%>
			        <tr>
			            <td>
			                <a href="/songs/<%=song._id%>"><%=song.title%></a>
			            </td>
			            <td><%=song.album%></td>
			            <td><%=song.artist%></td>
			            <td>
			                <% if (song.year) { %><%=song.year%><% } %>
			            </td>
			            <td>
			                <% if (song.bpm) { %><%=song.bpm%><% } %>
			            </td>
			        </tr>
			    <% }) %>
			</table>
		</div>
